<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_RelativeLayout_Hourly_li"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:background="@drawable/bg_gradient"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                    >

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timeLabel_Hourly_li"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        tools:text="12 PM"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toEndOf="@+id/timeLabel_Hourly_li"
        android:id="@+id/iconImageView_Hourly_li"
        android:src="@drawable/partly_cloudy"/>

    <TextView
        android:id="@+id/temperatureLabel_Hourly_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:textColor="#ffffffff"
        tools:text="100"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/summaryLabel_Hourly_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#ffffffff"

        android:layout_toRightOf="@+id/iconImageView_Hourly_li"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="Partly Cloudy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/summaryLabel_Hourly_li"
        android:id="@+id/popLabel_Hourly_li"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:text="P.O.P"
        android:layout_above="@+id/popLabelValue_Hourly_li"
        android:layout_toLeftOf="@+id/summaryLabel_Hourly_li"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temperatureLabel_Hourly_li"
        android:layout_toEndOf="@+id/summaryLabel_Hourly_li"
        android:id="@+id/popLabelValue_Hourly_li"
        tools:text="0%"
        android:textSize="14sp"
        android:textColor="#ffffffff"
        android:layout_toRightOf="@+id/summaryLabel_Hourly_li"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:text="Humid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/popLabel_Hourly_li"
        android:id="@+id/humidityLabel_Hourly_li"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:layout_toStartOf="@+id/temperatureLabel_Hourly_li"
        android:layout_above="@+id/popLabelValue_Hourly_li"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/popLabel_Hourly_li"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidityLabel_Hourly_li"
        android:layout_toEndOf="@+id/popLabel_Hourly_li"
        android:id="@+id/humidityLabelValue_Hourly_li"
        tools:text="---"
        android:textColor="#ffffffff"
        android:layout_toStartOf="@+id/temperatureLabel_Hourly_li"
        android:layout_centerInParent="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignBottom="@+id/timeLabel_Hourly_li"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/popLabelValue_Hourly_li"/>
</RelativeLayout>